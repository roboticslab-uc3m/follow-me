<application>
<name>follow-me App</name>
    <module>
        <name>followMeDialogueManager</name>
        <node>localhost</node>
    </module>

    <module>
        <name>followMeExecutionCore</name>
        <node>localhost</node>
    </module>
    <connection>
        <from>/followMeDialogueManager/command:o</from>
        <to>/followMeExecutionCore/dialogueManager/command:i</to>
    </connection>

    <module>
        <name>haarDetection</name>
        <parameters>--kinectDevice OpenNI2DeviceClient --kinectLocal /haarDetection</parameters>
        <node>/head</node>
    </module>

    <connection>
        <from>/haarDetection/state:o</from>
        <to>/followMeExecutionCore/cv/state:i</to>
    </connection>

    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/haarDetection/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/haarDetection/img:o</from>
        <to>/yarpview/haarDetection/img:i</to>
    </connection>

    <connection>
        <from>/speechRecognition:o</from>
        <to>/followMeDialogueManager/speechRecognition:i</to>
    </connection>

    <connection>
        <from>/followMeDialogueManager/tts-en:o</from>
        <to>/tts-en:i</to>
    </connection>

    <module>
        <name>followMeArmSwing</name>
        <node>localhost</node>
    </module>
    <connection>
        <from>/followMeDialogueManager/command:o</from>
        <to>/followMeArmSwing/dialogueManager/command:i</to>
    </connection>

</application>

