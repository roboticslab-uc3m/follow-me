<application>
<name>follow-me App</name>
    <module>
        <name>fmDialogueManager</name>
        <node>localhost</node>
    </module>

    <module>
        <name>fmExecutionCore</name>
        <node>/manipulation</node>
    </module>
    <connection>
        <from>/fmDialogueManager/command:o</from>
        <to>/fmExecutionCore/dialogueManager/command:i</to>
    </connection>

    <module>
        <name>cvFaces</name>
        <parameters>--kinectDevice OpenNI2DeviceClient --kinectLocal /cvFaces</parameters>
        <node>/head</node>
    </module>

    <connection>
        <from>/cvFaces/state:o</from>
        <to>/fmExecutionCore/cv/state:i</to>
    </connection>

    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/cvFaces/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/cvFaces/img:o</from>
        <to>/yarpview/cvFaces/img:i</to>
    </connection>

    <connection>
        <from>/speechRecognition1:o</from>
        <to>/fmDialogueManager/speechRecognition:i</to>
    </connection>

    <connection>
        <from>/fmDialogueManager/iSpeak:o</from>
        <to>/iSpeak</to>
    </connection>

    <module>
        <name>fmArmSwing</name>
        <node>localhost</node>
    </module>

</application>

