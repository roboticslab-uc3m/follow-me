<application>
<name>follow-me App</name>
    <module>
        <name>followMeDialogueManager</name>
        <node>localhost</node>
    </module>

    <module>
        <name>followMeExecutionCore</name>
        <node>localhost</node>
    </module>
    <connection>
        <from>/followMeDialogueManager/command:o</from>
        <to>/followMeExecutionCore/dialogueManager/command:i</to>
    </connection>

    <module>
        <name>cvFaces</name>
        <parameters>--kinectDevice OpenNI2DeviceClient --kinectLocal /cvFaces</parameters>
        <node>/head</node>
    </module>

    <connection>
        <from>/cvFaces/state:o</from>
        <to>/followMeExecutionCore/cv/state:i</to>
    </connection>

    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/cvFaces/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/cvFaces/img:o</from>
        <to>/yarpview/cvFaces/img:i</to>
    </connection>

    <connection>
        <from>/speechRecognition1:o</from>
        <to>/followMeDialogueManager/speechRecognition:i</to>
    </connection>

    <connection>
        <from>/followMeDialogueManager/iSpeak:o</from>
        <to>/iSpeak</to>
    </connection>

    <module>
        <name>followMeArmSwing</name>
        <node>localhost</node>
    </module>

</application>

